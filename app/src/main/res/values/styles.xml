
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorPrimaryText</item>
        <item name="android:textColorSecondary">@color/colorSecondaryText</item>
        <item name="android:windowBackground">@color/colorTextWhite</item>
        <item name="toolbarStyle">@style/Toolbar</item>
        <item name="android:actionMenuTextColor">@color/colorPrimary</item>
    </style>

    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="popupTheme">@style/Theme.AppCompat.Light</item>
    </style>


    <style name="movieTitle">
        <item name="android:textColor">#000000</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Title</item>
    </style>


    <style name="MovieOverViewContent" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:layout_marginTop">@dimen/detail_margin_5dp</item>
        <item name="android:layout_marginBottom">@dimen/detail_margin</item>
    </style>

    <style name="MovieDetailTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/colorTextWhite</item>
        <item name="android:layout_marginLeft">@dimen/text_margin_left</item>
        <item name="android:layout_marginTop">@dimen/text_margin_top</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MovieDetailSubtitle" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/colorTextWhite</item>
        <item name="android:paddingLeft">@dimen/text_padding_16dp</item>
        <item name="android:paddingRight">@dimen/text_padding_16dp</item>
        <item name="android:textSize">@dimen/subtitle_text_size</item>
    </style>


    <style name="MovieDetailContainer" parent="android:Widget">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/detail_margin</item>
        <item name="android:layout_marginLeft">@dimen/detail_margin_left</item>
        <item name="android:layout_marginRight">@dimen/detail_margin_right</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MovieDetailContainerTitle" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>


    <style name="TrailerContainer">
        <item name="android:padding">@dimen/text_padding_16dp</item>
    </style>

    <style name="PlayTrailerImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:src">@drawable/ic_play_circle</item>
    </style>

    <style name="MovieTrailerImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
    </style>


    <style name="ReviewContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/text_padding_16dp</item>
        <item name="android:paddingRight">@dimen/text_padding_16dp</item>
    </style>


    <style name="ReviewAuthorName" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:layout_marginTop">@dimen/detail_margin</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ReviewContentDescription">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/text_padding_16dp</item>
        <item name="android:paddingTop">@dimen/text_padding_16dp</item>
    </style>

    <style name="TrailerShareImage">
        <item name="android:layout_width">@dimen/trailer_share_image_width</item>
        <item name="android:layout_height">@dimen/trailer_share_image_height</item>
    </style>

</resources>