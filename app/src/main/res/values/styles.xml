<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- As per android Material Design Guideline titl should be 20sp medium, White text on dark backgrounds. -->
    <style name="movieTitle">
        <item name="android:textColor">#000000</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- As per android Material Design Guideline bogy font size should be 14sp regular. -->
    <style name="movieBodyText">
        <item name="android:textSize">14sp</item>
        <item name="android:text">Summary of the movie details</item>
    </style>

    <!-- As per android Material Design Guideline subheading font size should be 16sp regular. -->
    <style name="movieSubHeading">
        <item name="android:textSize">14sp</item>
        <item name="android:text">Summary of the movie details</item>
    </style>

    <style name="ratingStar">
        <item name="android:drawable">@drawable/ic_star_rate_black_18dp</item>
    </style>

</resources>
